             <BoxView HorizontalOptions="Center" WidthRequest="150" HeightRequest="2" Color="#2196F3" VerticalOptions="CenterAndExpand"/>
             <Label Text="{Binding UsersAcceptedCall}" FontSize="Medium" VerticalOptions="Start" HorizontalOptions="Center"/>
            </StackLayout>
            <StackLayout VerticalOptions="StartAndExpand" Margin="0,24,0,0" HorizontalOptions="FillAndExpand">
             <Label Text="VerspÃ¤ten sich" FontAttributes="Bold" FontSize="Medium" HorizontalOptions="Center"/>
             <BoxView HorizontalOptions="Center" WidthRequest="150" HeightRequest="2" Color="#2196F3" VerticalOptions="CenterAndExpand"/>
             <Label Text="{Binding UsersDelayedCall}" FontSize="Medium" VerticalOptions="Start" HorizontalOptions="Center"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
