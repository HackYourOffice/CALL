<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="call_app.Views.ItemDetailPage"
             Title="{Binding Title}">
    <StackLayout Spacing="20" Padding="15" VerticalOptions="FillAndExpand">
        <Label Text="{Binding Event.Title}" FontSize="Medium" FontAttributes="Bold" VerticalOptions="Start"/>
        <Label Text="{Binding Event.Description}" FontSize="Small" VerticalOptions="StartAndExpand"/>
        <Button Text="Registriere mich!" Clicked="Handle_Clicked" 
                HorizontalOptions="FillAndExpand" VerticalOptions="End" TextColor="White" BackgroundColor="#2196F3"/>
    </StackLayout>
</ContentPage>